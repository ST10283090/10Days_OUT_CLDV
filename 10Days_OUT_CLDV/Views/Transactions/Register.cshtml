@model _10Days_OUT_CLDV.Models.Transaction

@{
    var customers = ViewData["Customers"] as List<_10Days_OUT_CLDV.Models.Customer>;
    var products = ViewData["Products"] as List<_10Days_OUT_CLDV.Models.Product>;
}

<h1>Register a Transaction</h1>

@if (customers == null || customers.Count == 0 || products == null || products.Count == 0)
{
    <div class="alert alert-warning">
        No customers or prodcuts available. Please add some.
    </div>
}
else
{
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Customer_ID">Select Customer</label>
            <select asp-for="Customer_ID" class="form-control" asp-items="@(new SelectList(customers, "Customer_Id", "Customer_Name"))">
                <option value="">-- Select Customer --</option>
            </select>
            <span asp-validation-for="Customer_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product_ID">Select Product</label>
            <select asp-for="Product_ID" class="form-control" asp-items="@(new SelectList(products, "Product_Id", "Product_Name"))">
                <option value="">-- Select Product --</option>
            </select>
            <span asp-validation-for="Product_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Transaction_Category"></label>
            <input asp-for="Transaction_Category" class="form-control" />
            <span asp-validation-for="Transaction_Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Transaction_Date"></label>
            <input asp-for="Transaction_Date" class="form-control" type="datetime" />
            <span asp-validation-for="Transaction_Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit Transaction</button>
    </form>
}
